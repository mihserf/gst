
<div id="content_main">
<h3 class="inline"><%=h @city.name%></h3> <%= lang_choice(@city) %><br>

<%= @city.body %>

<h3><%= :opinions.l('Opinions') %></h3>
<%  for opinion in @city.opinions %>
  <a href="" class="toggle_link"><%= opinion.author %></a>
  <div class="toggle_div">
  <%= opinion.body %>
  </div>
<%end%>
</div>
<div id="content_right">
  <%= countries_list(@city.country) %>
</div>

  <%content_for(:admin_actions) do%>
     <%= link_to 'Редактировать', edit_city_path(@city) %>
  <%end%>

