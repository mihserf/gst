<div class="photo">
  
    <p><%= image_tag existing_city_photo.public_filename(:thumb) unless existing_city_photo.new_record?%></p>
    
    <%= file_field_tag 'existing_photos['+existing_city_photo.id.to_s+'][uploaded_data]' %>
    <%= hidden_field_tag 'existing_photos['+existing_city_photo.id.to_s+'][id]', existing_city_photo.id %>

    <%= link_to_function  image_tag("/images/delete_ico.gif",:alt=>"Удалить"), "destroy('city_photos',"+existing_city_photo.id.to_s+"); $(this).parent().fadeOut('slow', function(){$(this).remove()});" %>

    основная? <%= check_box_tag 'existing_photos['+existing_city_photo.id.to_s+'][main]', 1, existing_city_photo.main? %>

</div>