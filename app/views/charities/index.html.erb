
<%=tabs(:tab1=>"Список статей")%>





<table class="admin_table">
  
<% for charity in @charities %>
  <tr>
    <td><%=lang_id(charity.lang)%></td>
    <td><%= link_to charity.title, lang_charity_path(lang_id(charity.lang),charity.ident_num) %></td>
    <td><%= link_to image_tag("/images/edit_ico.gif",:alt=>"Редактировать"), edit_charity_path(charity) %></td>
    <td><%= link_to image_tag("/images/delete_ico.gif",:alt=>"Удалить"), charity, :confirm => 'Подтвердите удаление', :method => :delete %></td>
  </tr>
<% end %>
</table>

