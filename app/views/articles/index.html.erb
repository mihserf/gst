
<%=tabs(:tab1=>"Список статей")%>





<table class="admin_table">
  
<% for article in @articles %>
  <tr>
    <td><%=lang_id(article.lang)%></td>
    <td><%= link_to article.title, lang_article_path(lang_id(article.lang),article.ident_num) %></td>
    <td><%= link_to image_tag("/images/edit_ico.gif",:alt=>"Редактировать"), edit_article_path(article) %></td>
    <td><%= link_to image_tag("/images/delete_ico.gif",:alt=>"Удалить"), article, :confirm => 'Подтвердите удаление', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'Добавить статью', new_article_path %>
