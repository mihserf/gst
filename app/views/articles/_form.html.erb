<%= javascript_include_tag :fckeditor %>

Язык <%= Localedb.global.short %><br>

<% form_for(@article, :html => { :multipart => true } ) do |f| %>
  <%= f.error_messages %>

  <p>
    <%=ident_choice(@article)%>
  </p>

  <p>
    <%= f.label 'Журнал' %><br />
    <%= f.select :magazine_id, Magazine.find(:all, :order =>"name").map {|it| [it.name,it.id]}, :include_blank => true %>
  </p>

  <p>
    <%= f.label 'Название' %><br />
    <%= f.text_field :title %>
  </p>

  <p>
    <%= f.label 'Анонс' %><br />
    <%= fckeditor_textarea(:article, :short_text, :toolbarSet => 'Simple', :width => '100%', :height => '220px') %>
  </p>
  <p>
    <%= f.label 'Текст' %><br />
    <%= fckeditor_textarea(:article, :body, :toolbarSet => 'Simple', :width => '100%', :height => '300px') %>
  </p>

  <p>
    <%= f.submit "Сохранить" %>
  </p>
<% end %>

