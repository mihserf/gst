
<%=tabs(:tab1=>"Список статей")%>





<table class="admin_table">
  
<% for jim_article in @jim_articles %>
  <tr>
    <td><%=lang_id(jim_article.lang)%></td>
    <td><%= link_to jim_article.title, lang_jim_article_path(lang_id(jim_article.lang),jim_article.ident_num) %></td>
    <td><%= link_to image_tag("/images/edit_ico.gif",:alt=>"Редактировать"), edit_jim_article_path(jim_article) %></td>
    <td><%= link_to image_tag("/images/delete_ico.gif",:alt=>"Удалить"), jim_article, :confirm => 'Подтвердите удаление', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

