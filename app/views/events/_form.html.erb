<%= javascript_include_tag :fckeditor %>

Язык <%= Localedb.global.short %><br>
<% form_for(@event, :html => { :multipart => true } ) do |f| %>
  <%= f.error_messages %>

  <p>
    <%=ident_choice(@event)%>
  </p>
  <p>
    <%= f.label 'Название' %><br />
    <%= f.text_field :title %>
  </p>

  <p>
    <%= f.label 'Анонс' %><br />
    <%= fckeditor_textarea(:event, :short_text, :toolbarSet => 'Simple', :width => '100%', :height => '220px') %>
  </p>
  <p>
    <%= f.label 'Текст' %><br />
    <%= fckeditor_textarea(:event, :body, :toolbarSet => 'Simple', :width => '100%', :height => '300px') %>
  </p>

  <p>
    <%= f.submit "Сохранить" %>
  </p>
<% end %>

