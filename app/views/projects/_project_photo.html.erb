<div class="photo">
    
    <p><%= image_tag project_photo.public_filename(:view) unless project_photo.new_record?%></p>
    
    <%= file_field_tag 'photos[][uploaded_data]' %>

    <%= link_to_function  image_tag("/images/delete_ico.gif",:alt=>"Удалить"), "$(this).parent().fadeOut('slow', function(){$(this).remove()});" %>

     <p>основная? <%= check_box_tag 'photos[][main]', 1, false %></p>
     <p>лого? <%= check_box_tag 'photos[][logo]', 1, false %></p>

    <p>
        Описание<br>
        <%=  text_field_tag  'photos[][description]'%>
    </p>

</div>