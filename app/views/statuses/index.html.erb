<%=tabs(:tab1=>"Статусы")%>

<table class="admin_table">
<%current_lang=nil%>
<% for status in @statuses %>
    <% unless current_lang==status.lang %>
        <%current_lang=status.lang%>
        <tr><td><%=lang_id(current_lang)%></td></tr>
    <%end%>
    <tr>
        <td><%=link_to(status.name, status_path(status))%></td>
        <td><%= link_to image_tag("/images/edit_ico.gif",:alt=>"Редактировать"), edit_status_path(status) %></td>
        <td><%= link_to image_tag("/images/delete_ico.gif",:alt=>"Удалить"), status, :confirm => 'Подтвердите удаление', :method => :delete %></td>
    </tr>
<% end %>
</table>

<br />

<%= link_to 'Добавить статус', new_status_path %>
